<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:layout_margin="32dp"
    android:radius="30dp"
    android:background="@drawable/border_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="32dp"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar platillo"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#C4C4C4" />

            <ImageView
                android:id="@+id/imagenEditar"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sinimagen" />

            <ImageButton
                android:id="@+id/btn_selectImagen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:hint="Nombre:"
                android:inputType="text"
                android:paddingStart="16dp"
                android:textColor="#808080"
                android:textColorHint="@color/gris" />

            <EditText
                android:id="@+id/et_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:hint="Descripcion:"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="#808080"
                android:textColorHint="@color/gris" />


            <EditText
                android:id="@+id/et_pecio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:hint="Precio:"
                android:inputType="numberDecimal"
                android:paddingStart="16dp"
                android:textColor="#808080"
                android:textColorHint="@color/gris" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirmCategoria"
                style="@android:style/Widget.Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:text="Confirmar"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_eliminar"
                style="@android:style/Widget.Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_backgroud2"
                android:gravity="center"
                android:text="Eliminar"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
