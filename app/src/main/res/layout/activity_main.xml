<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAFBFB"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/logo"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:paddingLeft="20dp"
                android:textColor="#808080"
                android:textColorHint="@color/gris"
                android:layout_marginTop="32dp"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_edit"
                android:ems="10"
                android:paddingLeft="20dp"
                android:textColor="#808080"
                android:textColorHint="@color/gris"
                android:layout_marginTop="32dp"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnRecuperarContrasenia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:text="@string/recuperar"
                android:textColor="@color/com_facebook_blue" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                style="@android:style/Widget.Button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:text="Iniciar Sesion"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginGoogle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="16dp"
                android:text="Continuar con Google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="@drawable/background_gmail"
                android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
                android:drawableEnd="@drawable/ic_arrow" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_registrar"
                style="@android:style/Widget.Button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:text="Registrar"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>