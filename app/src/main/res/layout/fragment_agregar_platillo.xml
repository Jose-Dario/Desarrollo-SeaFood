<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAFBFD"
    tools:context=".administrador.ui.platillos.agregarPlatillo" >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="32dp"
                android:paddingBottom="32dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurar platillo"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="#C4C4C4" />

                <ImageView
                    android:id="@+id/imagenSelect"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/sinimagen"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/btn_selectImagen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit" />

                <EditText
                    android:id="@+id/et_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_edit"
                    android:ems="10"
                    android:hint="Nombre:"
                    android:textColor="#808080"
                    android:textColorHint="@color/gris"
                    android:inputType="text"
                    android:paddingStart="16dp" />

                <EditText
                    android:id="@+id/et_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_edit"
                    android:ems="10"
                    android:hint="Descripcion:"
                    android:textColor="#808080"
                    android:textColorHint="@color/gris"
                    android:inputType="text"
                    android:paddingStart="16dp" />

                <EditText
                    android:id="@+id/et_descuento"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_edit"
                    android:ems="10"
                    android:hint="Descuento:"
                    android:textColor="#808080"
                    android:textColorHint="@color/gris"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp" />

                <EditText
                    android:id="@+id/et_pecio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_edit"
                    android:ems="10"
                    android:hint="Precio:"
                    android:textColor="#808080"
                    android:textColorHint="@color/gris"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp" />

                <Spinner
                    android:id="@+id/spinnerCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_edit"
                    android:ems="10"
                    android:textColor="#808080"
                    android:paddingStart="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirmCategoria"
                    style="@android:style/Widget.Button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="30dp"
                    android:background="@drawable/button_backgroud"
                    android:gravity="center"
                    android:text="Confirmar"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>