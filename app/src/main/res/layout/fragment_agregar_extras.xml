<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebfbfb"
    tools:context=".administrador.ui.platillos.agregarPlatillo" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Configurar extras" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C4C4C4"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/imagenSelect"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/sinimagen"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btn_selectImagen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit" />


        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_edit"
            android:ems="10"
            android:paddingStart="16dp"
            android:hint="Nombre:"
            android:padding="16dp"
            android:textColor="#808080"
            android:textColorHint="@color/gris"
            android:layout_marginTop="32dp"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/et_pecio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_edit"
            android:ems="10"
            android:paddingStart="16dp"
            android:hint="Precio:"
            android:padding="16dp"
            android:textColor="#808080"
            android:textColorHint="@color/gris"
            android:layout_marginTop="32dp"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit"
            android:ems="10"
            android:paddingStart="16dp"
            android:hint="Descripcion:"
            android:padding="16dp"
            android:textColor="#808080"
            android:textColorHint="@color/gris"
            android:layout_marginTop="32dp"
            android:inputType="textMultiLine"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirmExtra"
            style="@android:style/Widget.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_backgroud"
            android:gravity="center"
            android:text="Confirmar"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>