<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Producto"
    tools:scrollbarSize="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="528dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/producto" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:translationY="450dp"
                app:cardBackgroundColor="#FDF6F5"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="50dp"
                    android:text="Descripción"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/volver"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif"
                android:foreground="@android:drawable/arrow_down_float"
                android:rotation="90"
                android:translationX="10dp"
                android:translationY="40dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/favorito"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"
                android:translationY="430dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="8dp"
                tools:translationX="320dp">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@android:drawable/btn_star_big_off"
                    android:translationX="3dp"
                    tools:translationY="-1dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="200dp"
                android:translationY="40dp"
                app:cardBackgroundColor="#6E000000"
                app:cardCornerRadius="32dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="Pescado a la talla"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/calificacion"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:translationX="25dp"
                android:translationY="430dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star"
                    android:tint="#1A5D1A"
                    android:translationX="60dp"
                    android:translationY="10dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="#323232"
                    android:textSize="24sp"
                    android:translationX="20dp"
                    tools:textStyle="bold"
                    tools:translationY="10dp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/descripción"
            android:layout_width="match_parent"
            android:layout_height="259dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:padding="20dp"
                android:text="Our fried rice is made from the finest ingredients and veggies. Every single dish is made with fresh vegetables. Each plate is served with our signature chicken and a free"
                android:textSize="14sp"
                tools:textStyle="italic" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:backgroundTint="#1A5D1A"
                android:translationX="20dp"
                android:translationY="150dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:translationX="35dp"
                    tools:textStyle="bold"
                    tools:translationY="15dp" />

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:translationY="15dp"
                    tools:textStyle="bold"
                    tools:translationX="50dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:backgroundTint="#FFFFFF"
                    android:backgroundTintMode="add"
                    android:textAlignment="center"
                    android:translationX="280dp"
                    android:translationY="7dp"
                    app:icon="@android:drawable/btn_star"
                    app:iconTint="#000000" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/contorno"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:translationX="125dp"
                app:cardCornerRadius="32dp"
                tools:translationY="155dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:translationX="2.5dp"
                    app:cardCornerRadius="32dp"
                    tools:cardBackgroundColor="#1A5D1A"
                    tools:translationY="2.5dp" >

                    <TextView
                        android:id="@+id/cantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:translationY="5dp"
                        tools:textStyle="bold"
                        tools:translationX="65dp" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#1A5D1A"
                        android:backgroundTintMode="add"
                        android:text="-"
                        android:textSize="24sp"
                        android:translationY="-5dp"
                        tools:textAlignment="center"
                        tools:textStyle="bold" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#1A5D1A"
                        android:backgroundTintMode="add"
                        android:text="+"
                        android:textSize="24sp"
                        android:translationX="80dp"
                        android:translationY="-5dp"
                        tools:textAlignment="center"
                        tools:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>